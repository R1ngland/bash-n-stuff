echo "" ; U=$(for f in $(find . -type f -name wp-config.php 2>/dev/null); do DB=($(awk -F "'" '/DB_[NUPH]/{print $4}/table_prefix/{print $2}' ./$f)); mysql ${DB[0]} -u ${DB[1]} -p${DB[2]} -h ${DB[3]} -e "SELECT option_value FROM ${DB[4]}options WHERE option_name = 'home'\G" 2>/dev/null | awk '/option/{print $2}'; done) ; for f in $U; do echo -ne "$f\t" && curl -IL $f 2>&1 |  awk '/HTTP/{print $2, $3}' | column -t; done
