wp=($( awk -F "'|," '/DB_[NUP]/ {print $5}' wp-config.php ; awk -F "'|," '/e_pr/ {print $2}' wp-config.php)) ; mysql -u "${wp[1]}" -p"${wp[2]}"  "${wp[0]}" -e "SELECT option_name, option_value FROM ${wp[3]}options WHERE option_name = 'home' OR option_name = 'siteurl'; " > oldhomeandsite.txt 2>/dev/null ; old=($(awk '/http/ {print $2}' oldhomeandsite.txt)) ; echo "${old[0]}" ; echo "Enter the new home and site URL: " ; read domain ; mysql -u "${wp[1]}" -p"${wp[2]}"  "${wp[0]}" -e "UPDATE ${wp[3]}options SET option_value = '${domain}' WHERE option_name = 'home' OR option_name = 'siteurl' " 2>/dev/null ; echo "Home and Site URL updated"
